  </insert>

  <select id="selectUserByParam" resultMap="BaseResultMap" parameterType="map">
    select 
    <include refid="Base_Column_List" />
    from user
    where 1=1
    <if test="userName != null">
      and USER_NAME = #{userName,jdbcType=VARCHAR}
