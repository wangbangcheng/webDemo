  </select>
  <select id="selectAll" resultMap= "BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from user
    where 1=1
  </select>
  
   <delete id="delete">
        delete from user
        where ID IN
        <foreach collection="arr_id" item="item" index="index" open="(" close=")" separator=",">
            #{item}
        </foreach>
   </delete>

  <delete id="deleteByDomain" parameterType="map">
    delete from user
    where 1=1
